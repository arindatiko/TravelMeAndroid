<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:color="#2180B4" />
            <!--<gradient android:angle="-90" android:startColor="#FF9800" android:endColor="#FF9800"  />-->
            <gradient android:angle="-90" android:startColor="#2180B4" android:endColor="#2180B4"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:color="#2180B4" />
            <solid android:color="#2180B4"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke  android:color="#2180B4" />
            <!--<gradient android:angle="-90" android:startColor="#FF9800" android:endColor="#FF9800" />-->
            <gradient android:angle="-90" android:startColor="#2180B4" android:endColor="#2180B4" />
        </shape>
    </item>
</selector>