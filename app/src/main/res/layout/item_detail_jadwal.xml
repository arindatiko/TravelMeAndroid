<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_margin="3dp"
    android:id="@+id/linear_detail"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <ImageView
        android:layout_gravity="center_vertical"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/lawean"
        android:layout_margin="5dp"
        android:id="@+id/gambar_tempat"/>

    <LinearLayout
        android:layout_width="16dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="3dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/nama_tempat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Pantai Sanggar"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/alamat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tanggung, Tanggunggunung, Tulungagung" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tgl"
                android:text="28 April 2018" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=", " />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/jam"
                android:text="09.00 WIB" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Akses : "
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/akses"
                android:text="Mudah"
                android:textColor="@color/black"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>
    <Button
        android:layout_gravity="center_vertical"
        android:background="@drawable/button_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnSelesai"
        android:text="SELESAI"/>
</LinearLayout>