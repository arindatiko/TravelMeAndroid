            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/btnSimpanKamar"
            android:textSize="16sp"
            android:text="simpan"
            android:textColor="#FF9800"
